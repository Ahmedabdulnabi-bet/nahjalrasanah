{
  "name": "nahj-oil-gas-store",
  "version": "2.0.0",
  "description": "Nahj Al-Rasanah Oil & Gas Equipment Store",
  "main": "index.html",
  "scripts": {
    "start": "serve .",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss assets/css/styles.css -o assets/css/styles.min.css",
    "build:js": "esbuild assets/js/main.js --bundle --minify --outfile=assets/js/main.min.js",
    "deploy": "npm run build && firebase deploy",
    "test": "jest",
    "lint": "eslint assets/js/",
    "format": "prettier --write 'assets/js/**/*.js' 'assets/css/**/*.css'"
  },
  "dependencies": {
    "firebase": "^10.13.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "tailwindcss": "^3.4.3"
  }
}